<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Log in</h3>
        <div class="row">
          <%= form_for(:logins, html: { class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, autofocus: true %>
                <%= f.label :email, class: 'active' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
                <%= f.password_field :password %>
                <%= f.label :password, class: 'active' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.button '<i class="material-icons right">arrow_forward</i>Log in'.html_safe, class: 'btn waves-effect orange waves-light btn-large' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>